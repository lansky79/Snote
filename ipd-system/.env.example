# IPD项目协作系统 - 环境配置示例
# 复制此文件为 .env 并根据需要修改配置

# 服务器端口
PORT=3004

# 环境模式 (development, production)
NODE_ENV=development

# 数据存储目录
DATA_DIR=./backend/data

# 日志级别 (debug, info, warn, error)
LOG_LEVEL=info

# 是否启用详细日志
VERBOSE_LOGGING=true

# CORS配置
CORS_ORIGIN=*

# 文件上传限制 (MB)
MAX_FILE_SIZE=10

# 会话密钥 (生产环境请修改)
SESSION_SECRET=ipd-system-secret-key

# 数据库备份间隔 (分钟)
BACKUP_INTERVAL=60