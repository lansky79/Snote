      "description": "负责质量管理和评审",
      "manager": "user_009",
      "members": ["user_009"]
    },
    {
      "id": "it",
      "name": "IT部",
      "description": "负责系统管理和技术支持",
      "manager": "user_010",
      "members": ["user_010"]
    },
    {
      "id": "design",
      "name": "设计部",
      "description": "负责产品设计和用户体验",
      "manager": "user_011",
      "members": ["user_011"]
    },
    {
      "id": "test",
      "name": "测试部",
      "description": "负责产品质量测试和验证",
      "manager": "user_012",
      "members": ["user_012"]
    },
    {
      "id": "operation",
      "name": "运营部",
      "description": "负责产品运营和用户增长",
      "manager": "user_013",
      "members": ["user_013"]
    },
    {
      "id": "sales",
      "name": "销售部",
      "description": "负责产品销售和客户关系",
      "manager": "user_014",
      "members": ["user_014"]
    },
    {
      "id": "finance",
      "name": "财务部",
