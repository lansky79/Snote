{
  "settings": {
    "system": {
      "name": "IPD项目协作系统",
      "version": "1.0.0",
      "description": "基于华为IPD流程的项目协作管理系统",
      "company": "华为技术有限公司",
      "logo": "/images/logo.png",
      "theme": "default",
      "language": "zh-CN",
      "timezone": "Asia/Shanghai",
      "dateFormat": "YYYY-MM-DD",
      "timeFormat": "HH:mm:ss",
      "maxFileSize": "50MB",
      "allowedFileTypes": [
        ".pdf",
        ".doc",
        ".docx",
        ".xls",
        ".xlsx",
        ".ppt",
        ".pptx",
        ".jpg",
        ".png",
        ".gif"
      ],
      "sessionTimeout": 3600,
      "backupEnabled": true,
      "backupInterval": "daily",
      "maintenanceMode": false,
      "debugMode": false
    },
    "email": {
      "enabled": true,
      "smtpServer": "smtp.company.com",
      "smtpPort": 587,
      "username": "system@company.com",
      "password": "encrypted_password",
      "fromAddress": "IPD系统 <noreply@company.com>",
      "enableSSL": true,
      "templates": {
        "taskAssigned": {
          "subject": "新任务分配通知",
          "enabled": true
        },
        "dcpReview": {
          "subject": "DCP评审通知",
          "enabled": true
        },
        "projectUpdate": {
          "subject": "项目状态更新",
          "enabled": true
        }
      }
    },
    "security": {
      "passwordMinLength": 8,
      "passwordRequireUppercase": true,
      "passwordRequireLowercase": true,
      "passwordRequireNumbers": true,
      "passwordRequireSpecialChars": true,
      "maxLoginAttempts": 5,
      "lockoutDuration": 1800,
      "sessionSecure": true,
      "enableTwoFactor": false,
      "ipWhitelist": [],
      "auditLogEnabled": true,
      "dataEncryption": true
    },
    "workflow": {
      "autoProgressStages": false,
      "requireDCPApproval": true,
      "allowParallelStages": false,
      "defaultReviewers": ["user_009"],
      "reviewDeadlineDays": 7,
      "escalationEnabled": true,
      "escalationDays": 3,
      "notificationEnabled": true,
      "stages": {
        "concept": {
          "name": "概念阶段",
          "required": true,
          "minDuration": 7,
          "maxDuration": 30,
          "requiredDeliverables": ["需求分析报告", "可行性评估"]
        },
        "plan": {
          "name": "计划阶段",
          "required": true,
          "minDuration": 5,
          "maxDuration": 20,
          "requiredDeliverables": ["项目计划", "资源配置方案"]
        },
        "develop": {
          "name": "开发阶段",
          "required": true,
          "minDuration": 30,
          "maxDuration": 180,
          "requiredDeliverables": ["设计文档", "开发代码", "测试报告"]
        },
        "verify": {
          "name": "验证阶段",
          "required": true,
          "minDuration": 10,
          "maxDuration": 30,
          "requiredDeliverables": ["测试报告", "验证文档"]
        },
        "release": {
          "name": "发布阶段",
          "required": true,
          "minDuration": 3,
          "maxDuration": 15,
          "requiredDeliverables": ["发布计划", "用户手册"]
        },
        "lifecycle": {
          "name": "生命周期阶段",
          "required": false,
          "minDuration": 90,
          "maxDuration": 365,
          "requiredDeliverables": ["维护计划", "运营报告"]
        }
      }
    },
    "integration": {
      "ldapEnabled": false,
      "ldapServer": "",
      "ldapPort": 389,
      "ldapBaseDN": "",
      "ssoEnabled": false,
      "apiEnabled": true,
      "apiRateLimit": 1000,
      "webhookEnabled": true,
      "externalSystems": [
        {
          "name": "企业邮箱",
          "type": "email",
          "enabled": true,
          "config": {}
        },
        {
          "name": "文档管理系统",
          "type": "document",
          "enabled": false,
          "config": {}
        }
      ]
    },
    "performance": {
      "cacheEnabled": true,
      "cacheTimeout": 3600,
      "compressionEnabled": true,
      "maxConcurrentUsers": 100,
      "databasePoolSize": 10,
      "logLevel": "info",
      "metricsEnabled": true,
      "healthCheckInterval": 300
    }
  },
  "roles": [
    {
      "id": "admin",
      "name": "系统管理员",
      "description": "拥有系统所有权限",
      "permissions": [
        "system.manage",
        "user.manage",
        "project.manage",
        "dcp.manage",
        "settings.manage",
        "audit.view"
      ]
    },
    {
      "id": "project_manager",
      "name": "项目经理",
      "description": "负责项目管理和团队协调",
      "permissions": [
        "project.create",
        "project.edit",
        "project.view",
        "task.assign",
        "team.manage",
        "dcp.initiate",
        "deliverable.approve"
      ]
    },
    {
      "id": "team_member",
      "name": "团队成员",
      "description": "参与项目开发和任务执行",
      "permissions": [
        "project.view",
        "task.update",
        "deliverable.upload",
        "comment.create",
        "dashboard.view"
      ]
    },
    {
      "id": "reviewer",
      "name": "评审员",
      "description": "负责DCP评审和质量把关",
      "permissions": [
        "project.view",
        "dcp.review",
        "deliverable.review",
        "comment.create",
        "audit.view"
      ]
    }
  ],
  "departments": [
    {
      "id": "rd",
      "name": "产品研发部",
      "description": "负责产品研发和项目管理",
      "manager": "user_001",
